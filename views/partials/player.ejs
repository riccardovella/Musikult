<!-- PLAYER TEMPLATE -->

<div id = 'player-container' class = 'container-fluid'>

  <div class="row">

    <div class="col">     
      <!-- image and title -->

      <div class="row align-items-center container-fluid" style="padding-right: 0px">

        <i class="fas fa-angle-double-up fa-lg" id="karaoke-button"></i>
        <img id="thumbnail" src=''>

        <div id="text-container">
          <div class="row" id="title-container"> <p id="title">  </p> </div>
          <div class="row text-container" id="artist-container"> <p id="artist">  </p> </div>
        </div>
        
        
        
      </div>
      

    </div>

    <div class="col-7">
      <!-- timeline and buttons -->

      <div class='row text-center align-items-center container' id="audioplayer">

          <div id="timeline">
              <div id="playhead"></div>
          </div>

      </div>
    
      <div class='row'> 
        <div d='buttons' class='container-fluid text-center unselectable'>
    
          <i class="fas fa-backward fa-lg" id='backward-button'></i>
          <i class="fas fa-play fa-lg" id='play-button'></i>
          <i class="fas fa-forward fa-lg" id='forward-button'></i>

          <i class="fas fa-random fa-lg" id="shuffle-button"></i>
    
        </div>     
      </div>

    </div>

    <div class="col" style="padding-right: 0px;">
      <!-- volume and other buttons -->

      <div class="row text-center align-items-center container" id="volume-container">

        <div class="col-4 align-items-center">
          <i class="fas fa-volume-off fa-lg" id='volume-button'></i>
        </div>

        <div class="col align-items-center" style="padding-left:5px">
          <div id="volume">
            <div id="volume-progress"></div>
          </div>
        </div>
        
      </div> 

    </div>

  </div>

  
</div>

<div class="container-fluid" id="karaoke">
  <div id="karaoke-container">
    <img id="karaoke-thumbnail" src=''>
    <div id="karaoke-text-container"></div>
  </div>
  <i class="fas fa-angle-double-down fa-lg" id="karaoke-exit-button"></i>
  <p id="karaoke-mode-button"> KARAOKE MODE </p>
</div>


<script src='../script/player.js'></script>
<script src='../script/karaoke_mode.js'></script>


